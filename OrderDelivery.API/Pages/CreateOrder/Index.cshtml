@page
@model CreateOrder.IndexModel
@{
    ViewData["Title"] = "Create Order";
}

<h2 class="text-info">Create New Order</h2>

<div class="boreder container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.SenderCity">Город отправителя</label>
            </div>
            <div class="col-6">
                <input asp-for="Order.SenderCity" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.SenderAddress">Адрес отправителя</label>
            </div>
            <div class="col-6">
                <input asp-for="Order.SenderAddress" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.ReceiverCity">Город получателя</label>
            </div>
            <div class="col-6">
                <input asp-for="Order.ReceiverCity" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.ReceiverAddress">Адрес получателя</label>
            </div>
            <div class="col-6">
                <input asp-for="Order.ReceiverAddress" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.CargoWeight">Вес груза</label>
            </div>
            <div class="col-6">
                <input asp-for="Order.CargoWeight" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.PickUpDate">Дата забора груза</label>
            </div>
            <div class="col-6">
                <input asp-for="Order.PickUpDate" class="form-control" />
            </div>
        </div>
        <br>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <br>
            <div>
                <a asp-page="Index" class="btn btn-success form-control">На главную</a>
            </div>
        </div>
    </form>
</div>